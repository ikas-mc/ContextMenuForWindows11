<Page
    x:Class="ContextMenuCustomApp.View.Menu.MenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:ContextMenuCustomApp.View.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    d:Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:Height="400"
    d:Width="600"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Background="{ThemeResource ContentBackGroundColor}"
    DataContext="{x:Bind _viewModel}"
    mc:Ignorable="d">

    <Page.Resources>
        <common:VisibilityConverter x:Key="VisibilityConverter" />
        <common:EqualsVisibilityConverter x:Key="EqualsVisibilityConverter" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <muxc:ProgressBar
            Grid.Row="0"
            Grid.Column="1"
            VerticalAlignment="Top"
            IsIndeterminate="True"
            Visibility="{x:Bind _viewModel.IsBusy, Mode=OneWay}" />

        <Grid
            Grid.Column="0"
            Padding="4,40,4,4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="{ThemeResource NavContentBorderColor}"
            BorderThickness="0,0,1,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="32" />
            </Grid.RowDefinitions>
            <ListView
                x:Name="CommandList"
                Grid.Row="1"
                Grid.Column="0"
                ItemsSource="{Binding MenuItems}"
                SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button
                    Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="Add_Click"
                    ToolTipService.ToolTip="Add a menu">
                    <SymbolIcon Symbol="Add" />
                </Button>
                <Button
                    Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Click="Refresh_Click"
                    ToolTipService.ToolTip="Refresh menus">
                    <SymbolIcon Symbol="Refresh" />
                </Button>
                <Button
                    Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="Open_Folder_Click"
                    ToolTipService.ToolTip="Open menus folder">
                    <SymbolIcon Symbol="Folder" />
                </Button>
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" TextLineBounds="Full">
                    Cache:
                </TextBlock>
                <muxc:TeachingTip
                    x:Name="CacheTip"
                    Title="About Cache:"
                    CloseButtonContent="Got it!"
                    IsLightDismissEnabled="True"
                    PlacementMargin="4"
                    PreferredPlacement="Auto"
                    Target="{x:Bind BuildCacheButton}">
                    <muxc:TeachingTip.Content>
                        <TextBlock>
                            <Run>Preprocess the menu files to cache</Run>
                            <LineBreak />
                            <Run>This can optimize the menu display speed</Run>
                            <LineBreak />
                            <Run Foreground="Red">Rebuild after modifying the menu !</Run>
                            <LineBreak />
                            <LineBreak />
                            <Run Text="Click clear button right to disable cache" />
                            <LineBreak />
                            <LineBreak />
                            <Run>Cache Time:</Run>
                            <LineBreak />
                            <Run Text="{Binding CacheTime}" />
                        </TextBlock>
                    </muxc:TeachingTip.Content>

                </muxc:TeachingTip>
                <Button
                    x:Name="BuildCacheTipButton"
                    Margin="4,0"
                    Padding="4"
                    VerticalAlignment="Center"
                    Background="{x:Null}"
                    BorderThickness="0"
                    Click="BuildCacheTipButton_Click">
                    <SymbolIcon Symbol="Help" />
                </Button>
                <Button
                    x:Name="BuildCacheButton"
                    Margin="4,0"
                    Padding="4"
                    VerticalAlignment="Center"
                    Click="{x:Bind _viewModel.Build}"
                    ToolTipService.ToolTip="Preprocess menus to cache">
                    <SymbolIcon Symbol="Sync" />
                </Button>
                <Button
                    Margin="4,0"
                    Padding="4"
                    VerticalAlignment="Center"
                    Click="{x:Bind _viewModel.ClearCache}"
                    ToolTipService.ToolTip="Clear menus cache">
                    <SymbolIcon Symbol="Clear" />
                </Button>
            </StackPanel>
        </Grid>
        <Grid
            Grid.Column="1"
            Padding="4,40,4,4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{ThemeResource NavContentBackGroundColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="32" />
            </Grid.RowDefinitions>
            <ScrollViewer
                Grid.Row="1"
                Grid.Column="2"
                Margin="0"
                Padding="4,4,16,4"
                DataContext="{Binding SelectedItem, ElementName=CommandList}"
                Visibility="{Binding SelectedItem, ElementName=CommandList, Converter={StaticResource VisibilityConverter}}">
                <Grid Padding="0,0,0,64">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBox
                        Grid.Row="0"
                        Header="Title"
                        PlaceholderText="open with notepad"
                        Text="{Binding Title, Mode=TwoWay}" />
                    <RelativePanel
                        Grid.Row="1"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Stretch">
                        <TextBox
                            Margin="0,0,64,0"
                            Header="Exe"
                            PlaceholderText="&quot;C:\Windows\notepad.exe&quot;"
                            RelativePanel.AlignBottomWithPanel="True"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignRightWith="OpenExeButton"
                            Text="{Binding Exe, Mode=TwoWay}" />
                        <Button
                            x:Name="OpenExeButton"
                            Width="56"
                            Margin="0,0,0,-1"
                            Click="OpenExeButton_OnClick"
                            RelativePanel.AlignBottomWithPanel="True"
                            RelativePanel.AlignRightWithPanel="True"
                            ToolTipService.ToolTip="Open">
                            <SymbolIcon Symbol="OpenFile" />
                        </Button>
                    </RelativePanel>
                    <TextBox
                        Grid.Row="2"
                        Margin="0,8,0,0"
                        Header="Param"
                        PlaceholderText="&quot;{path}&quot;"
                        Text="{Binding Param, Mode=TwoWay}" />
                    <TextBox
                        Grid.Row="3"
                        Margin="0,8,0,0"
                        Header="Icon"
                        PlaceholderText="&quot;c:\some\icon.icon&quot;"
                        Text="{Binding Icon, Mode=TwoWay}" />
                    <TextBox
                        Grid.Row="4"
                        Margin="0,8,0,0"
                        Header="Match Extensions"
                        PlaceholderText="&quot;.txt .zip&quot; or *"
                        Text="{Binding AcceptExts, Mode=TwoWay}" />
                    <ToggleSwitch
                        Grid.Row="5"
                        Margin="0,8,0,0"
                        Header="Match Folder"
                        IsOn="{Binding AcceptDirectory, Mode=TwoWay}" />


                    <ToggleSwitch
                        Grid.Row="6"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Stretch"
                        IsOn="{Binding AcceptMultipleFiles, Mode=TwoWay}"
                        Visibility="Collapsed">
                        <ToggleSwitch.HeaderTemplate>
                            <DataTemplate>
                                <RelativePanel>
                                    <TextBlock RelativePanel.AlignLeftWithPanel="True" Text="[Multiple Files] Match Multiple Files" />
                                    <HyperlinkButton
                                        Padding="0"
                                        NavigateUri="https://github.com/ikas-mc/ContextMenuForWindows11/wiki/Help#multiple-files"
                                        RelativePanel.AlignRightWithPanel="True"
                                        Visibility="{Binding AcceptMultipleFiles}">
                                        <TextBlock Text="Read wiki before use!!!" />
                                    </HyperlinkButton>
                                </RelativePanel>
                            </DataTemplate>
                        </ToggleSwitch.HeaderTemplate>

                    </ToggleSwitch>

                    <ComboBox
                        Grid.Row="6"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Stretch"
                        SelectedIndex="{Binding AcceptMultipleFilesFlag, Mode=TwoWay}">
                        <ComboBoxItem Content="Off" />
                        <ComboBoxItem Content="Each (execute [exe] on each path)" />
                        <ComboBoxItem Content="Join (execute [exe] only once)" />

                        <ComboBox.HeaderTemplate>
                            <DataTemplate>
                                <RelativePanel>
                                    <TextBlock RelativePanel.AlignLeftWithPanel="True" Text="[Multiple Files] Match Multiple Files" />
                                    <HyperlinkButton
                                        Padding="0"
                                        NavigateUri="https://github.com/ikas-mc/ContextMenuForWindows11/wiki/Help#multiple-files"
                                        RelativePanel.AlignRightWithPanel="True">
                                        <TextBlock Text="Read wiki before use!!!" />
                                    </HyperlinkButton>
                                </RelativePanel>
                            </DataTemplate>
                        </ComboBox.HeaderTemplate>
                    </ComboBox>

                    <TextBox
                        Grid.Row="7"
                        Margin="0,8,0,0"
                        Header="[Multiple Files] Path Delimiter"
                        PlaceholderText="|"
                        Text="{Binding PathDelimiter, Mode=TwoWay}"
                        Visibility="{Binding AcceptMultipleFilesFlag, Converter={StaticResource EqualsVisibilityConverter}, ConverterParameter=2}" />

                    <TextBox
                        Grid.Row="8"
                        Margin="0,8,0,0"
                        Header="[Multiple Files] Param"
                        PlaceholderText="{}{path}"
                        Text="{Binding ParamForMultipleFiles, Mode=TwoWay}"
                        Visibility="{Binding AcceptMultipleFilesFlag, Converter={StaticResource EqualsVisibilityConverter}, ConverterParameter=2}" />

                </Grid>

            </ScrollViewer>
            <Grid
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,-80,0,0"
                Padding="0"
                Visibility="{Binding SelectedItem, ElementName=CommandList, Converter={StaticResource VisibilityConverter}, ConverterParameter=!}">
                <RichTextBlock
                    x:Name="AboutContentBody"
                    Grid.Row="1"
                    Margin="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Paragraph>
                        <Hyperlink Click="Add_Click">Add a menu</Hyperlink>
                        <Run>or Select one menu from left list to edit</Run>
                    </Paragraph>
                </RichTextBlock>

            </Grid>
            <StackPanel
                Grid.Row="0"
                Grid.Column="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">


                <Button
                    Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Save_Click"
                    ToolTipService.ToolTip="Save menu">
                    <SymbolIcon Symbol="Save" />
                </Button>

                <Button
                    Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Delete_Click"
                    ToolTipService.ToolTip="Delete menu">
                    <SymbolIcon Symbol="Delete" />
                </Button>

                <Button
                    Margin="4,0"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="Open_Click"
                    ToolTipService.ToolTip="Open menu file">
                    <SymbolIcon Symbol="OpenFile" />
                </Button>
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="04,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">

                <HyperlinkButton
                    Margin="4,0"
                    Padding="4"
                    NavigateUri="https://github.com/ikas-mc/ContextMenuForWindows11/wiki">
                    <TextBlock>
                        <Run>Help</Run>
                    </TextBlock>
                </HyperlinkButton>

                <HyperlinkButton
                    Margin="4,0"
                    Padding="4"
                    NavigateUri="https://github.com/ikas-mc/ContextMenuForWindows11">
                    <TextBlock>
                        <Run Text="{x:Bind _viewModel.Version()}" />
                        <Run>ikas</Run>
                    </TextBlock>
                </HyperlinkButton>
                <Button Padding="4">
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel MinWidth="320" MinHeight="120">
                                <TextBox Header="Custom Menu Title" Text="{x:Bind _viewModel.GetCustomMenuName(), BindBack=_viewModel.SetCustomMenuName, Mode=TwoWay}" />
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                    <SymbolIcon Symbol="Setting" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>